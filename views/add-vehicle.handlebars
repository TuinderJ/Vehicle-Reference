    {{!-- -----CARD LAYOUT----- --}}
    {{#if id}}
<form id="new-card-form" class="infoBoxes">
  <tbody class='userInfobox' data-id={{id}}>
  <tr class='titleRow'>
    <th>Details</th>
  </tr>
    {{#if unitNumber}}
      <tr class='row'>
        <td>Unit Number</td>
        <td><input name="unit-num" type="text"></td>
      </tr>
    {{/if}}
    {{#if customerUnitNumber}}
      <tr class='row'>
        <td>Customer Unit Number</td>
        <td><input name="customer-unit-num" type="text"></td>
      </tr>
    {{/if}}
    {{#if vin}}
      <tr class='row'>
        <td>VIN</td>
        <td><input name="vin-input" type="text"></td>
      </tr>
    {{/if}}
</tbody>
  {{#each categories as |category|}}
  {{> card}}
  {{/each}}
</form>
{{/if}}

